<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_ui.event_search.EventSearchActivity"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Search..."
            android:inputType="text"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/filter_button"
        android:layout_below="@+id/textInputLayout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/ic_filter_foreground"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_event_layout"
        android:visibility="visible"
        android:layout_below="@+id/filter_button"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sad_frog1"
            android:layout_width="173dp"
            android:layout_height="156dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_sad_frog_foreground" />

        <TextView
            android:id="@+id/no_events_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sad_frog1"
            android:text="No related events :(\n"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/try_other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/no_events_text"
            android:text="Try another keywords / filters or..."
            android:textStyle="italic"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/go_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/try_other_text"
            android:layout_marginTop="10dp"
            android:text="Back to home"
            android:clickable="true"
            android:textColor="@color/green1"
            android:textSize="15sp"/>

    </RelativeLayout>


</RelativeLayout>